@model Lanche

<div class="card" style="width: 25rem;">
    <img class="img-fluid" src="@Model.ImageUrl" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text">@Model.DescricaoDetalhada</p>
        <div class="container text-center">
            <a asp-controller="Lanche" asp-action="List"
               class="btn btn-primary m-3">Todos os Lanches</a>

            <a asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra"
               asp-route-lancheId="@Model.LancheId"
               class="btn btn-primary m-3">Adicionar @Model.Nome ao carrinho</a>
        </div>
    </div>
</div>